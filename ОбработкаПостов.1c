&НаСервере
Процедура ОбработкаЗапросаПосты(Запрос, Ответ, ПутьЗапроса)
	
	МетодЗапроса = Запрос.Метод;
	
	Если МетодЗапроса = "GET" Тогда
		// Получение списка постов
		Ответ.УстановитьТипСодержимого("application/json");
		Ответ.Записать(ПолучитьСписокПостов());
	ИначеЕсли МетодЗапроса = "POST" Тогда
		// Создание нового поста
		ДанныеЗапроса = ПрочитатьJSON(Запрос.ПолучитьТелоКакСтроку());
		Ответ.УстановитьТипСодержимого("application/json");
		Ответ.Записать(СоздатьПост(ДанныеЗапроса));
	ИначеЕсли МетодЗапроса = "PUT" Тогда
		// Обновление поста
		ДанныеЗапроса = ПрочитатьJSON(Запрос.ПолучитьТелоКакСтроку());
		Ответ.УстановитьТипСодержимого("application/json");
		Ответ.Записать(ОбновитьПост(ДанныеЗапроса));
	ИначеЕсли МетодЗапроса = "DELETE" Тогда
		// Удаление поста
		ИдентификаторПоста = СреднийСимвол(ПутьЗапроса, "/api/posts/", "");
		Ответ.УстановитьТипСодержимого("application/json");
		Ответ.Записать(УдалитьПост(ИдентификаторПоста));
	КонецЕсли;
	
КонецПроцедуры

